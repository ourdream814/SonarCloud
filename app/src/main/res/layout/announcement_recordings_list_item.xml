<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              tools:background="@drawable/gradient_background">

    <ImageButton
        android:id="@+id/make_announcement_itemPlayBtn"
        style="@style/Base.Widget.AppCompat.ActionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@mipmap/ic_record_play_play_button"/>

    <TextView
        android:id="@+id/make_announcement_itemTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/make_announcement_itemPlayBtn"
        android:layout_toEndOf="@id/make_announcement_itemPlayBtn"
        android:textSize="17sp"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:textColor="@android:color/white"
        tools:text="Recording 0:05"/>

    <ImageButton
        android:id="@+id/make_announcement_sendRecordingBtn"
        style="@style/Base.Widget.AppCompat.ActionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:src="@mipmap/ic_record_play_send_button"/>

    <ImageButton
        android:id="@+id/make_announcement_scheduleRecording"
        style="@style/Base.Widget.AppCompat.ActionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/make_announcement_sendRecordingBtn"
        android:layout_toStartOf="@id/make_announcement_sendRecordingBtn"
        android:src="@mipmap/ic_record_play_schedule_button"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/white"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginEnd="10dp"
        android:layout_alignParentBottom="true"
        android:id="@+id/view"/>

    <ProgressBar
        style="?android:attr/progressBarStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sending_record_progressBar"
        android:layout_centerVertical="true"
        android:visibility="gone"
        android:layout_alignLeft="@+id/make_announcement_sendRecordingBtn"
        android:layout_alignStart="@+id/make_announcement_sendRecordingBtn"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>
</RelativeLayout>